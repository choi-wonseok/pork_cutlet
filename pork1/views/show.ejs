                <div>
                    <p><a href="/profile/<%= data.WRT_ID%>"><%= data.WRT_ID%></a></p>
                    <a href="#" class="menu" onclick="sideMenu();">
                        <span class="material-icons">more_horiz</span>
                    </a>
