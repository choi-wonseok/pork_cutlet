                        <!-- <a href="/edit/ data.POST_NO %>">수정</a> -->
                     <!-- } %> -->
                    </div>
                </div>
                <p class="post_text"><%= data.CONTENTS %></p>
                <p>
                    <img class="user_img" src="/user_img/<%= data.POST_TITLE %>" alt="">
                </p>
                
                <!--게시물 밑에 옵션-->
                <div class="post_options">
                    <div class="post_option">
                        <span class="material-icons">thumb_up</span>
                        <p>좋아요</p>
                    </div>
                    <div class="post_option"  onclick="comment()">
                        <span class="material-icons">chat_bubble_outline</span>
                        <p>댓글</p>
