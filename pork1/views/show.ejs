<%- include('header'); -%>



    <!--메인 바디-->
    <div class="left_container">
 <!--왼쪽 사이드 바-->
        <div class="left_sidebar">
            <div class="sidebar_user_profile">
                <!--이미지 자리-->
                <div>
                    <div class="profile_img">
                        <img src="/img/Logo-PK.webp" alt="">
                    </div>
                    <p><%= users.NAME %></p>
                    <p><%= users.EMAIL %></p>
                </div>
            </div>
            <div class="sidebar_user_info">
                <h3> 내 정보 </h3>
                <p><%= users.GENDER %><br>계열: <%= users.HAKSA_NUM %><br>테니스 동아리 참여 중
                </p>
            </div>
            <diV class="sidebar_user_stack">
                <p>My Stacks & tech</p>
                <div class="sidebar_used_tool">
                    <span class="sidebar_hash">#</span>
                    <p>react.js</p>
                </div>
                <div class="sidebar_used_tool">
                    <span class="sidebar_hash">#</span>
                    <p>typescript</p>
                </div>
                <div class="sidebar_used_tool">
                    <span class="sidebar_hash">#</span>
                    <p>next.js</p>
                </div>
                <div class="sidebar_used_tool">
                    <span class="sidebar_hash">#</span>
                    <p>express.js</p>
                </div>
            </diV>
            <div class="footer">
                <p>Copyright 2021 - Team.Porkcutlet Leeyumin</p>
            </div>
        </div>
     </div>

        <% contents.forEach((data, index) => { %>
    <div class="right_container">
        <div class="main_contents">

        <div class="post">
            <div class="user_profile">
                <img src="" alt="" onerror="this.src='/img/NoAccount.png'">
                <div>
                    <p><%= data.WRT_ID%></p>
                    <br>
                    <%= data.WRT_DTT %>
                    <br>
                    <% if (data.WRT_ID == userID) { %>
                        <a href="/edit/<%= data.POST_NO %>">수정</a>
                    <% } %>
                    </div>
                </div>
                <p class="post_text"><%= data.CONTENTS %></p>
                
                <!--게시물 밑에 옵션-->
                <div class="post_options">
                    <div class="post_option">
                        <span class="material-icons">thumb_up</span>
                        <p>좋아요</p>
                    </div>
                    <div class="post_option"  onclick="location.href='/comment/<%= data.POST_NO %>'">
                        <span class="material-icons">chat_bubble_outline</span>
                        <p>댓글</p>
                    </div>
                <div class="post_option">
                    <span class="material-icons">bookmark_border</span>
                    <p>저장하기</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<% }); %> 
<%- include('footer'); -%>
